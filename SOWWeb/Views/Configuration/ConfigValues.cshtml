@model List<SOWWeb.Models.LookupsVM>

@using (Html.BeginForm())
{
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <h2 style="padding-bottom:5px;">@Model[i].LookupKey</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width:20%">Lookup Id</th>
                        <th style="width:50%">Lookup Code</th>
                        <th style="width:25%">Lookup Value</th>
                    </tr>
                </thead>
                <tbody>
                    @Html.HiddenFor(m => m[i].LookupKey)
                    @for (int j = 0; j < Model[i].Values.Count; j++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => m[i].Values[j].LookupId)
                            </td>
                            <td>
                                @Html.DisplayFor(m => m[i].Values[j].LookupCode)
                            </td>
                            <td>
                                @Html.DisplayFor(m => m[i].Values[j].LookupValue)
                            </td>
                        </tr>
                    }
                </tbody>     
            </table>
        </div>
    }
}